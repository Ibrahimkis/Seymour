{
  "name": "seymour",
  "private": true,
  "version": "1.0.4",
  "type": "module",
  "main": "public/electron.cjs",
  "author": "I.K. Bosh",
  "description": "The Ultimate World Building Tool",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:mac": "npm run build && electron-builder --mac"
  },
  "dependencies": {
    "@tiptap/extension-bubble-menu": "^3.14.0",
    "@tiptap/extension-character-count": "^3.14.0",
    "@tiptap/extension-focus": "^3.14.0",
    "@tiptap/extension-highlight": "^3.14.0",
    "@tiptap/extension-image": "^3.14.0",
    "@tiptap/extension-link": "^3.14.0",
    "@tiptap/extension-placeholder": "^3.14.0",
    "@tiptap/extension-text-align": "^3.14.0",
    "@tiptap/extension-underline": "^3.14.0",
    "@tiptap/pm": "^3.14.0",
    "@tiptap/react": "^3.14.0",
    "@tiptap/starter-kit": "^3.14.0",
    "idb": "^8.0.3",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^19.2.0",
    "react-force-graph-2d": "^1.29.0",
    "react-router-dom": "^7.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.seymour.app",
    "productName": "Seymour",
    "directories": {
      "output": "release"
    },
    "files": [
      "build/**/*",
      "public/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "public/electron.cjs"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/Seymourico.ico.ico",
      "fileAssociations": [
        {
          "ext": "seymour",
          "name": "Seymour Project File",
          "description": "Seymour World Building Project",
          "icon": "public/Seymourico.ico.ico",
          "role": "Editor"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "public/Seymourico.icns",
      "fileAssociations": [
        {
          "ext": "seymour",
          "name": "Seymour Project File",
          "description": "Seymour World Building Project",
          "role": "Editor"
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
