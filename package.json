{
  "name": "seymour",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "public/electron.cjs",

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",

    "electron:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build:win": "npm run build && electron-builder --win"
  },

  "dependencies": {
    "@tiptap/extension-bubble-menu": "^3.14.0",
    "@tiptap/extension-character-count": "^3.14.0",
    "@tiptap/extension-focus": "^3.14.0",
    "@tiptap/extension-highlight": "^3.14.0",
    "@tiptap/extension-image": "^3.14.0",
    "@tiptap/extension-link": "^3.14.0",
    "@tiptap/extension-placeholder": "^3.14.0",
    "@tiptap/extension-text-align": "^3.14.0",
    "@tiptap/extension-underline": "^3.14.0",
    "@tiptap/pm": "^3.14.0",
    "@tiptap/react": "^3.14.0",
    "@tiptap/starter-kit": "^3.14.0",
    "firebase": "^12.7.0",
    "idb": "^8.0.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-force-graph-2d": "^1.29.0",
    "react-router-dom": "^7.11.0"
  },

  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },

  "build": {
    "appId": "com.seymour.app",
    "productName": "Seymour",
    "directories": {
      "output": "release"
    },
    "files": [
      "build/**/*",
      "public/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "public/electron.cjs"
    },
    "win": {
      "target": "nsis"
    }
  }
}
